{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "#EEEEEE",
                    "foreground": "#0099F8",
                    "leading_diamond": "\ue0b2",
                    "style": "diamond",
                    "type": "os"
                },
                {
                    "background": "#EEEEEE",
                    "foreground": "#0099F8",
                    "style": "diamond",
                    "template": "{{ .HostName }} ",
                    "type": "text"
                },
                {
                    "background": "#0099F8",
                    "foreground": "#000000",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "folder_separator_icon": " \ue0b1 ",
                        "style": "full"
                    },
                    "style": "powerline",
                    "template": " \ue5ff {{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "#D2ff5E",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff9248{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
                        "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
                        "{{ if gt .Behind 0 }}#f17c37{{ end }}"
                    ],
                    "foreground": "#193549",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true
                    },
                    "style": "powerline",
                    "template": " {{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
                    "type": "git"
                },
                {
                    "background": "#F1184C",
                    "foreground": "#242424",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "powerline",
                    "template": " {{ if gt .Code 0 }}üí¨{{ end }} ",
                    "type": "text"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#eeeeee",
                    "foreground_templates": [
                        "{{ if .Root }}#ffe96f{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "plain",
                    "template": "  {{ if .Root }}\uf007{{ else }}\uf2c0{{ end }} {{ .UserName }} \u276f ",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "transient_prompt": {
        "foreground": "#D2ff5E",
        "foreground_templates": [
            "{{ if gt .Code 0 }}#EF5350{{ end }}"
        ],
        "properties": {
            "always_enabled": true
        },
        "style": "plain",
        "template": "  {{ .PromptCount }} \u276f ",
        "type": "text"
    },
    "console_title_template": "{{if .Root}} ‚ö° {{end}}{{.UserName}} üìÅ {{.Folder}}",
    "version": 2
}