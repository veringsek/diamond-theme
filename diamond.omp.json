{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 3,
    "theme_version": "1.0.0",
    "console_title_template": "{{ if .Root }} ‚ö° {{ end }}{{ .UserName }} üìÅ {{ .Folder }}",
    "transient_prompt": {
        "type": "text",
        "template": "\uE5FF {{ .PWD }} \n{{ if .Root }}\uF007{{ else }}\uF2C0{{ end }} {{ .PromptCount }} ‚ùØ ",
        "newline": true,
        "style": "plain",
        "foreground": "p:transient",
        "foreground_templates": [
            "{{ if gt .Code 0 }}p:error{{ end }}"
        ],
        "properties": {
            "always_enabled": true
        }
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "python",
                    "template": " \uE235 {{ .Venv }} ",
                    "style": "diamond",
                    "leading_diamond": "\uE0B2",
                    "foreground": "p:python-fore",
                    "background": "p:python-back",
                    "properties": {
                        "display_mode": "environment",
                        "fetch_virtual_env": true,
                        "home_enabled": true
                    }
                },
                {
                    "type": "node",
                    "template": " \uE718 {{ .Full }} ",
                    "style": "diamond",
                    "leading_diamond": "\uE0B2",
                    "foreground": "p:node-fore",
                    "background": "p:node-back",
                    "properties": {
                        "display_mode": "files",
                        "fetch_package_manager": true,
                        "home_enabled": true
                    }
                },
                {
                    "type": "os",
                    "style": "diamond",
                    "leading_diamond": "\uE0B2",
                    "foreground": "p:back",
                    "background": "p:fore",
                    "properties": {
                        "cache_duration": "none"
                    }
                },
                {
                    "type": "text",
                    "template": "{{ .HostName }} ",
                    "style": "diamond",
                    "foreground": "p:back",
                    "background": "p:fore",
                    "properties": {
                        "cache_duration": "none"
                    }
                },
                {
                    "type": "path",
                    "template": " \uE5FF {{ .Path }} ",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "p:fore",
                    "background": "p:back",
                    "properties": {
                        "style": "full",
                        "right_format": "<i>%s</i>",
                        "cache_duration": "none",
                        "folder_separator_icon": " <transparent><b>\uE0B1</b></> "
                    }
                },
                {
                    "type": "git",
                    "template": " {{ .HEAD }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uF692 {{ .StashCount }}{{ end }} ",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "p:git-fore",
                    "background": "p:transient",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}p:git-changed{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:git-match{{ end }}",
                        "{{ if gt .Ahead 0 }}p:git-ahead{{ end }}",
                        "{{ if gt .Behind 0 }}p:git-behind{{ end }}"
                    ],
                    "properties": {
                        "cache_duration": "none",
                        "fetch_stash_count": true,
                        "fetch_status": true
                    }
                },
                {
                    "type": "text",
                    "template": " {{ if gt .Code 0 }}üí¨{{ end }} ",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "p:fore",
                    "background": "p:error",
                    "properties": {
                        "always_enabled": true,
                        "cache_duration": "none"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "template": "  {{ if .Root }}\uF007{{ else }}\uF2C0{{ end }} {{ .UserName }} ‚ùØ ",
                    "style": "plain",
                    "foreground": "p:fore",
                    "foreground_templates": [
                        "{{ if .Root }}p:root{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true,
                        "cache_duration": "none"
                    }
                }
            ],
            "newline": true
        }
    ],
    "secondary_prompt": {
        "template": "  <d>\uF4C3 {{ .UserName }}</d> ‚ùØ ",
        "foreground": "p:fore"
    },
    "palette": {
        "fore": "#EEEEEE",
        "back": "accent",
        "terminal": "#000000",
        "root": "#FFE96F",
        "error": "#F1184C",
        "transient": "#D2FF5E",
        "python-fore": "#FFD43B",
        "python-back": "#306998",
        "node-fore": "#303030",
        "node-back": "#68A063",
        "git-fore": "#193549",
        "git-changed": "#FF9248",
        "git-both": "#F26D50",
        "git-ahead": "#89D1DC",
        "git-behind": "#F17C37",
        "--old-transient-error": "#EF5350",
        "--old-error-foreground": "#242424"
    },
    "accent_color": "#0099F8",
    "terminal_background": "#000000"
}