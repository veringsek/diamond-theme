{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 3,
    "console_title_template": "{{ if .Root }} ‚ö° {{ end }}{{ .UserName }} üìÅ {{ .Folder }}",
    "transient_prompt": {
        "properties": {
            "always_enabled": true
        },
        "template": "\ue5ff {{ .PWD }} \n{{ if .Root }}\uf007{{ else }}\uf2c0{{ end }} {{ .PromptCount }} ‚ùØ ",
        "foreground": "#D2ff5E",
        "type": "text",
        "style": "plain",
        "foreground_templates": [
            "{{ if gt .Code 0 }}#EF5350{{ end }}"
        ],
        "newline": true
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "properties": {
                        "display_mode": "environment",
                        "fetch_virtual_env": true,
                        "home_enabled": true
                    },
                    "foreground": "#FFD43B",
                    "background": "#306998",
                    "type": "python",
                    "style": "diamond",
                    "leading_diamond": "\uE0B2",
                    "template": " \uE235 {{ .Venv }} "
                },
                {
                    "properties": {
                        "display_mode": "files",
                        "fetch_package_manager": true,
                        "home_enabled": true
                    },
                    "foreground": "#303030",
                    "background": "#68A063",
                    "type": "node",
                    "style": "diamond",
                    "leading_diamond": "\uE0B2",
                    "template": " \uE718 {{ .Full }} "
                },
                {
                    "properties": {
                        "cache_duration": "none"
                    },
                    "leading_diamond": "\uE0B2",
                    "foreground": "#0099F8",
                    "background": "#EEEEEE",
                    "type": "os",
                    "style": "diamond"
                },
                {
                    "properties": {
                        "cache_duration": "none"
                    },
                    "template": "{{ .HostName }} ",
                    "foreground": "#0099F8",
                    "background": "#EEEEEE",
                    "type": "text",
                    "style": "diamond"
                },
                {
                    "properties": {
                        "cache_duration": "none",
                        "folder_separator_icon": " \uE0B1 ",
                        "style": "full"
                    },
                    "template": " \uE5FF {{ .Path }} ",
                    "foreground": "#000000",
                    "powerline_symbol": "\uE0B0",
                    "background": "#0099F8",
                    "type": "path",
                    "style": "powerline"
                },
                {
                    "properties": {
                        "cache_duration": "none",
                        "fetch_stash_count": true,
                        "fetch_status": true
                    },
                    "template": " {{ .HEAD }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uF692 {{ .StashCount }}{{ end }} ",
                    "foreground": "#193549",
                    "powerline_symbol": "\uE0B0",
                    "background": "#D2FF5E",
                    "type": "git",
                    "style": "powerline",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#F26D50{{ end }}",
                        "{{ if gt .Ahead 0 }}#89D1DC{{ end }}",
                        "{{ if gt .Behind 0 }}#F17C37{{ end }}"
                    ]
                },
                {
                    "properties": {
                        "always_enabled": true,
                        "cache_duration": "none"
                    },
                    "template": " {{ if gt .Code 0 }}üí¨{{ end }} ",
                    "foreground": "#242424",
                    "powerline_symbol": "\ue0b0",
                    "background": "#F1184C",
                    "type": "text",
                    "style": "powerline"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "properties": {
                        "always_enabled": true,
                        "cache_duration": "none"
                    },
                    "template": "  {{ if .Root }}\uf007{{ else }}\uf2c0{{ end }} {{ .UserName }} ‚ùØ ",
                    "foreground": "#EEEEEE",
                    "type": "text",
                    "style": "plain",
                    "foreground_templates": [
                        "{{ if .Root }}#FFE96F{{ end }}"
                    ]
                }
            ],
            "newline": true
        }
    ],
    "secondary_prompt": {
        "foreground": "#EEEEEE",
        "template": "  <d>\uF4C3 {{ .UserName }}</d> ‚ùØ "
    },
    "theme_version": "1.0.0"
}